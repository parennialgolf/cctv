{
  "name": "PARennial Golf CCTV System",
  "description": "Secure CCTV monitoring system with multi-location support",
  "repository": "https://github.com/your-username/cctv-system",
  "keywords": ["cctv", "monitoring", "security", "dokku"],
  "env": {
    "CCTV_ADMIN_PASSWORD": {
      "description": "Password for admin user",
      "required": true
    },
    "CCTV_VIEWER_PASSWORD": {
      "description": "Password for viewer user", 
      "required": true
    },
    "CCTV_MANAGER_PASSWORD": {
      "description": "Password for manager user (optional)",
      "required": false
    },
    "CCTV_GUEST_PASSWORD": {
      "description": "Password for guest user (optional)",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "image": "nginx:alpine",
  "stack": "heroku-20"
}
